@using Manager.WebApp.Resources;
@using Newtonsoft.Json;
@using Manager.DataLayer.Entities.Business
@using Manager.SharedLibs;
@using Manager.WebApp.Helpers
@model Manager.WebApp.Models.MenuServiceCreateOrUpdateViewModel

@Html.AntiForgeryToken()
@Html.Partial("_Notifications")

<div class="m-portlet__body">
    <div class="form-group m-form__group row" style="display: flex;">
        @Html.HiddenFor(m => m.Id, new { id = "formId" })
        @Html.HiddenFor(m => m.JsonWorkflow, new { id = "workflows" })
        <div class="col-lg-4">
            @Html.LabelFor(m => m.Code, new { @class = "form-control-label" }) <span class="required-input">*</span>
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control form-control-warning m-input" })
            @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-4">
            @Html.LabelFor(m => m.Name, new { @class = "form-control-label" }) <span class="required-input">*</span>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-warning m-input" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group m-form__group row">
        <div class="col-lg-12">
            @Html.LabelFor(m => m.Description, new { @class = "form-control-label" })
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control m-input", @rows = 5 })
        </div>
    </div>

    <div class="form-group  m-form__group row">
        <div class="col-md-12 text-right">
            <a class="btn btn-info btn-sm btn-search-workflow" href="javascript:;">
                <i class="fa fa-search-plus"></i> Thêm workflow
            </a>
        </div>
        <div class="col-md-12" style="">
            <div class="m-wizard m-wizard--4 m-wizard--brand m-wizard--step-first" style="border: 1px dotted lightgray;">
                <div class="row m-row--no-padding">
                    <div class="col-xl-3 col-lg-12 m--padding-top-20 m--padding-bottom-15">
                        <div class="m-wizard__head">
                            <div class="m-wizard__nav">
                                <div class="m-wizard__steps" id="demo1">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-12">
                        <div class="m-wizard__form">
                            <div class="m-form m-form--label-align-left- m-form--state-">
                                <div class="m-portlet__body m-portlet__body--no-padding">
                                    <div class="m-wizard__form-step m-wizard__form-step--current" id="formio_id">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="m-portlet__foot">
    <div class="col-lg-12 col-md-12 col-sm-12 form-group pt-3 row">
        <div class="col-lg-6">
            <button id="btnSave" type="button" class="btn btn-info btn-sm">
                <i class="fa fa-download"></i> @ManagerResource.LB_SAVE
            </button>
            <a class="btn btn-outline-info btn-back btn-sm" href="@Url.Action("Index", "MenuService")"><i class="fa fa-backward"></i> @ManagerResource.LB_GOBACK</a>
        </div>
        <div class="col-lg-6 m--align-right">
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" aria-labelledby="" data-backdrop="static" aria-hidden="true" id="modalSearchWorkFlow">
    <div class="modal-dialog modal-lg" style="max-width: 75%;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100"><i class="fa fa-search"></i> 材料リスト</h5>
                @*<h5 class="modal-title w-100"><i class="fa fa-search"></i> Chi tiết WorkFlow</h5>*@
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>

            <div class="modal-body" style="max-height:unset;overflow-y:unset;">
                <div class="m-portlet">
                    <div class="m-portlet__body">
                        <form action="/WorkFlow/Search" id="frmWorkFlowSearch" method="post">
                            <input type="hidden" name="SearchExec" value="" />
                            <div class="row form-group">
                                <div class="col-md-2">
                                    <input class="form-control form-control-sm m-input" autocomplete="off" name="Code" placeholder="コード" type="text" value="">
                                </div>

                                <div class="col-md-2">
                                    <input class="form-control form-control-sm m-input" autocomplete="off" name="Keyword" placeholder="タイトル" type="text" value="">
                                </div>

                                <div class="col-md-2">
                                    <button type="button" class="btn btn-info btn-sm btn-filter-workflow" style="padding: 0.28rem 0.75rem;">
                                        <i class="fa fa-search"></i> 検索
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div id="modalSearchWorkFlowContent"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-info mr-auto" onclick="WorkFlowSearchTool.SearchAllowSelect('AfterSelectWorkFlow');">
                    <i class="fa fa-check"></i> 選択済み
                </button>

                <button type="button" class="btn btn-outline-info btn-sm text-right" data-dismiss="modal">
                    <i class="fa fa-remove"></i> 閉じる
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" aria-labelledby="" data-backdrop="static" aria-hidden="true" id="modalWorkFlowDetail">
    <div class="modal-dialog modal-lg" style="max-width: 75%;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @*<h5 class="modal-title w-100"><i class="fa fa-cubes"></i> 材料情報</h5>*@
                <h5 class="modal-title w-100"><i class="fa fa-cubes"></i> Chi tiết workflow</h5>
                <button type="button" class="close btn-search-workflow-show" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>

            <div class="modal-body">
                <div id="modalWorkFlowDetailContent"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-info btn-sm text-right btn-search-workflow-show" data-dismiss="modal">
                    <i class="fa fa-remove"></i> 閉じる
                </button>
            </div>
        </div>
    </div>
</div>
