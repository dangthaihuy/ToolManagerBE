@using VnCompany.WebApp.Resources
@using VnCompany.WebApp.Helpers;
@using VnCompany.SharedLibs;
@model VnCompany.WebApp.Models.Business.EmployeeManagerModel
@{
    var currentLang = CommonHelpers.GetCurrentLanguageOrDefault();
}

<form action="/Employee" method="get" class="m-form m-form--fit">
    @Html.HiddenFor(m => m.SearchExec)

    <div class="m-portlet__body">
        <div class="form-group row">
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Keyword, new { @class = "form-control form-control-sm m-input", placeholder = ManagerResource.LB_KEYWORD_SEARCH })
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-info btn-sm">
                    <i class="fa fa-search"></i> @ManagerResource.LB_SEARCH
                </button>
            </div>
        </div>
    </div>
</form>